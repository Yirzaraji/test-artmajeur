{% extends 'base.html.twig' %}

{% block body %}

{% if app.user and is_granted('ROLE_ADMIN')%}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-9 text-center mt-5 mb-5">
            {# {{dump(form.vars.value.treated)}} #}
            {% for ContactMailGroup in ContactMailsGroup %}
                <span class="fw-bold">SUJET</span></br>
                <p>{{ContactMailGroup.subject}}</p>
                <span class="fw-bold">MESSAGE</span></br>
                <p>{{ContactMailGroup.message}}</p>
            {% endfor %}
            {{form_start(form)}}
                <div class="d-none">
                    {{ form_row(form.subject) }}
                    {{ form_row(form.message) }}
                    {{ form_row(form.mail) }}
                    {{ form_row(form.name) }}
                </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
{% endif %}
{% endblock %}